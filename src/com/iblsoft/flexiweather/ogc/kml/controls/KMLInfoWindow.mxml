<?xml version="1.0" encoding="utf-8"?>
<controls:KMLInfoWindowBase xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:controls="com.iblsoft.flexiweather.ogc.kml.controls.*"
		skinClass="com.iblsoft.flexiweather.ogc.kml.controls.skins.KMLInfoWindowSkin"
		close="close()">
	<fx:Declarations>

		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<controls:layout>
		<s:VerticalLayout paddingBottom="10" paddingLeft="10" paddingRight="10" paddingTop="10"/>
	</controls:layout>
	<s:Label text="{feature.name}" width="100%"/>
	<s:TextArea id="textArea" width="100%" enabled="true" editable="false" borderAlpha="0"/>
	<s:HGroup width="100%" horizontalAlign="right">
		<s:Button label="Close" click="close()"/>
	</s:HGroup>
</controls:KMLInfoWindowBase>
